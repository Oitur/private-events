<h1><%= @user.name %>'s Events</h1>
<h2>My events:</h2>
<% @user.events.each do |event| %>
  <h3><%= event.title %></h3>
  <p><%= event.date %></p>
  <hr>
<% end %>

<h2>Upcoming events:</h2>

<% @user.attend_events.upcoming.each do |event| %>
  <h3><%= event.title %></h3>
  <p><%= event.date %></p>
  <hr>
<% end %>


<h2>Past events: </h2>

<% @user.attend_events.past.each do |event| %>
  <h3><%= event.title %></h3>
  <p><%= event.date %></p>
  <hr>
<% end %>
